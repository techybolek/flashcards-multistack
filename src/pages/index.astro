---
import Layout from '../layouts/Layout.astro';
import { Button } from '@/components/ui/button';
import type { User } from '@supabase/supabase-js';

// Get the authenticated user from locals (set by middleware)
const user = Astro.locals.user as User | null;
---

<Layout title="Welcome to Flashcard Wizard - Your AI Assistant" hideHeader={true}>
  <main class="min-h-screen bg-gradient-to-b from-gray-900 to-gray-800">
    <div class="container mx-auto px-4 py-16">
      <nav class="flex justify-between items-center mb-16">
        <div class="text-2xl font-bold text-white">Flashcard Wizard</div>
        {!user ? (
          <div class="space-x-4">
            <a href="/auth/login" class="text-white hover:text-gray-300">Login</a>
            <a href="/auth/register" class="bg-white text-gray-900 px-4 py-2 rounded-lg hover:bg-gray-100">Sign Up</a>
          </div>
        ) : (
          <a href="/dashboard" class="bg-white text-gray-900 px-4 py-2 rounded-lg hover:bg-gray-100">Go to Dashboard</a>
        )}
      </nav>

      <div class="flex flex-col items-center justify-center text-center max-w-4xl mx-auto mt-20">
        <h1 class="text-6xl font-bold text-white mb-6 leading-tight">
          Unlock the Power of AI<br/>
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-500">
            with Flashcard Wizard
          </span>
        </h1>
        
        <p class="text-xl text-gray-300 mb-12 max-w-2xl">
          Experience the next generation of AI assistance. Streamline your workflow, enhance productivity, and unlock new possibilities.
        </p>

        {!user ? (
          <div class="space-x-6">
            <a 
              href="/auth/register" 
              class="inline-block bg-gradient-to-r from-blue-500 to-purple-600 text-white px-8 py-3 rounded-lg text-lg font-semibold hover:opacity-90 transition-opacity"
            >
              Get Started Free
            </a>
            <a 
              href="/auth/login" 
              class="inline-block border-2 border-white text-white px-8 py-3 rounded-lg text-lg font-semibold hover:bg-white hover:text-gray-900 transition-colors"
            >
              Login
            </a>
          </div>
        ) : (
          <a 
            href="/dashboard" 
            class="inline-block bg-gradient-to-r from-blue-500 to-purple-600 text-white px-8 py-3 rounded-lg text-lg font-semibold hover:opacity-90 transition-opacity"
          >
            Continue to Dashboard
          </a>
        )}
      </div>

      <div class="mt-32 grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div class="bg-gray-800 p-8 rounded-xl">
          <div class="text-blue-400 text-4xl mb-4">ðŸš€</div>
          <h3 class="text-xl font-semibold text-white mb-2">Lightning Fast</h3>
          <p class="text-gray-400">Experience instant responses and real-time processing</p>
        </div>
        <div class="bg-gray-800 p-8 rounded-xl">
          <div class="text-purple-400 text-4xl mb-4">ðŸ”’</div>
          <h3 class="text-xl font-semibold text-white mb-2">Secure & Private</h3>
          <p class="text-gray-400">Your data is protected with enterprise-grade security</p>
        </div>
        <div class="bg-gray-800 p-8 rounded-xl">
          <div class="text-green-400 text-4xl mb-4">ðŸ’¡</div>
